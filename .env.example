# AWS credentials (direct authentication)
AWS_ACCESS_KEY_ID=your_access_key_id
AWS_SECRET_ACCESS_KEY=your_secret_access_key
# Optional session token for temporary credentials
# AWS_SESSION_TOKEN=your_session_token

# Or use a profile from your ~/.aws/credentials file
# AWS_PROFILE=default

# Cross-account role assumption
# Either provide a full role ARN:
AWS_ROLE_ARN=arn:aws:iam::123456789012:role/ResourceScannerRole
# Or provide account ID and role name separately:
# AWS_TARGET_ACCOUNT_ID=123456789012
# AWS_ROLE_NAME=ResourceScannerRole
AWS_ROLE_SESSION_NAME=ResourceScannerSession
# AWS_EXTERNAL_ID=optional_external_id

# Default region (can be overridden by CLI arguments)
AWS_DEFAULT_REGION=ap-southeast-1

# Default output settings (can be overridden by CLI arguments)
AWS_OUTPUT_FORMAT=json  # table, json, or csv
AWS_OUTPUT_FILE=aws_resources.json  # Only used for json and csv formats 